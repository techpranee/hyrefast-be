# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/interview-assistant

# Supabase Configuration (for migration)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# Redis Configuration (for job queue)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_ISSUER=interview-assistant
JWT_AUDIENCE=interview-assistant-users

# File Upload Configuration
UPLOAD_PATH=./public/uploads
MAX_FILE_SIZE=50MB

# Email Configuration (SES)
EMAIL_FROM=noreply@yourcompany.com
EMAIL_SMTP_HOST=smtp.yourprovider.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-smtp-username
EMAIL_SMTP_PASS=your-smtp-password

# AWS SES Configuration (for OTP emails)
AWS_SES_REGION=ap-south-1
AWS_SES_ACCESS_KEY=your-ses-access-key
AWS_SES_SECRET_KEY=your-ses-secret-key
SES_FROM_EMAIL=Interview Portal <noreply@techpranee.com>

# SMS Configuration (for OTP)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_FROM_NUMBER=+1234567890

# AWS S3 Configuration (if using S3 for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# AI/ML Configuration
OLLAMA_BASE_URL=https://ollama2.havenify.ai
WHISPER_API_URL=https://api.openai.com/v1/audio/transcriptions
WHISPER_API_KEY=your-whisper-api-key

# Application Configuration
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret
SESSION_TIMEOUT=3600000

# Migration Configuration
MIGRATION_BATCH_SIZE=100
MIGRATION_DELAY_MS=100

# Analysis Worker Configuration
MAX_ANALYSIS_WORKERS=2
MAX_ANALYSIS_QUEUE=100
ANALYSIS_TIMEOUT=300000
