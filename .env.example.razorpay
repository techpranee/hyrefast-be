# Add these Razorpay configuration variables to your .env file

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Credit System Configuration
CREDIT_RATE=10
DEFAULT_CREDIT_ALERT_THRESHOLD=5
MAX_CREDITS_PER_PURCHASE=1000
MIN_CREDITS_PER_PURCHASE=1

# API Configuration
API_BASE_URL=http://localhost:3000
JWT_SECRET=your_jwt_secret

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/your_database

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# AWS S3 Configuration (for media storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your_s3_bucket
AWS_REGION=us-east-1

# Testing Configuration
TEST_USER_TOKEN=your_test_jwt_token
TEST_WORKSPACE_ID=your_test_workspace_id
TEST_USER_ID=your_test_user_id

# Production Settings
NODE_ENV=development
PORT=3000
ALLOW_ORIGIN=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=info

# Example values (replace with your actual Razorpay credentials):
# RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxx
# RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxx
# RAZORPAY_WEBHOOK_SECRET=xxxxxxxxxxxxxxxx

# For production, use live credentials:
# RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxx
# RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxx
# RAZORPAY_WEBHOOK_SECRET=xxxxxxxxxxxxxxxx
